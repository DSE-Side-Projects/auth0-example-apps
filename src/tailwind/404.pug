        link(rel="icon" type="image/png" sizes="16x16" href="favicon.png")
        script(src="js/main.js")
    body.bg-body.text-body.font-body
        .container.mx-auto.px-4


            nav(class="flex flex-wrap items-center justify-between p-4")
                div(class="flex flex-shrink-0 mr-6")
                    a(href="#" class="text-xl text-indigo-500 font-semibold" ) Dunder Mifflin
                div(class="block lg:hidden")
                    <button class="navbar-burger flex items-center py-2 px-3 text-indigo-500 rounded border border-indigo-500"><svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg></button>
                div(class="navbar-menu hidden lg:flex lg:flex-grow lg:items-center w-full lg:w-auto")
                    div(class="lg:ml-auto")
                        a(href="#" class="block lg:inline-block mt-4 lg:mt-0 mr-10 text-blue-900 hover:text-blue-700" ) Products
                        a(href="#" class="block lg:inline-block mt-4 lg:mt-0 mr-10 text-blue-900 hover:text-blue-700" ) Team
                        a(href="#" class="block lg:inline-block mt-4 lg:mt-0 mr-10 text-blue-900 hover:text-blue-700" ) Customers
                    div
                        a(href="#" class="inline-block py-3 px-5 mr-4 leading-none text-center text-blue-700 bg-indigo-100 hover:bg-indigo-200 rounded shadow" ) Sign in
                        a(href="#" class="inline-block py-3 px-6 mt-4 lg:mt-0 leading-none text-white bg-indigo-500 hover:bg-indigo-600 rounded shadow" ) Sign up

            section(class="py-12 px-4 text-center")
                img(src="placeholders/pictures/error.svg" alt="" class="max-w-auto md:max-w-sm mx-auto" )
                h2(class="text-5xl mt-8 mb-2 font-heading" ) Page not found
                p(class="text-xl mb-6" ) Error 404
                a(href="#" class="inline-block py-4 px-8 leading-none text-white bg-indigo-500 hover:bg-indigo-600 rounded shadow" ) Return to the homepage


            footer
                div(class="flex flex-wrap items-center py-4 px-4 border-b")
                    div(class="w-full lg:w-1/5 text-center lg:text-left")
                        a(class="text-xl text-indigo-500 font-semibold" href="#" ) Dunder Mifflin

                    div(class="w-full lg:w-3/5 mt-4 lg:mt-0 text-center")
                        a(class="inline-block mx-4 mb-4 lg:mb-0 text-blue-900 hover:text-blue-700" href="#" ) Products
                        a(class="inline-block mx-4 mb-4 lg:mb-0 text-blue-900 hover:text-blue-700" href="#" ) Team
                        a(class="inline-block mx-4 mb-4 lg:mb-0 text-blue-900 hover:text-blue-700" href="#" ) Customers
                        a(class="inline-block mx-4 mb-4 lg:mb-0 text-blue-900 hover:text-blue-700" href="#" ) Blog

                    div(class="flex justify-center lg:justify-end w-full lg:w-1/5 my-2 lg:my-0")
                        img(src="placeholders/icons/message.svg" alt="" class="w-6 h-6" )
                        img(src="placeholders/icons/share.svg" alt="" class="w-6 h-6 mx-8" )
                        img(src="placeholders/icons/star.svg" alt="" class="w-6 h-6" )

                div(class="py-4 text-center")
                    span(class="block md:inline-block mb-4 md:mb-0 mx-3" ) &copy; 2019 Dunder Mifflin
                    a(class="inline-block mx-4 text-blue-900 hover:text-blue-700" href="#" ) Privacy Policy
                    a(class="inline-block mx-4 text-blue-900 hover:text-blue-700" href="#" ) Term of Service